@model JugueteModel

@{
    ViewData["Title"] = "Agregar Juguetes";
    
}

<div class="text-center">
    <h1 class="display-2">Agregar Juguetes</h1>  
</div>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-controller="Juguete" asp-action="JugueteAdd">
    <div class="mb-3">
        <label asp-for="Codigo" class="form-label">Código</label>
        <input type="text" class="form-control" asp-for="Codigo" placeholder="Escriba el código" />
    </div>

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label">Nombre</label>
        <input type="text" class="form-control" asp-for="Nombre" placeholder="Escriba el nombre" />
    </div>

    <div class="mb-3">
        <label asp-for="Precio" class="form-label">Precio</label>
        <input type="text" class="form-control" asp-for="Precio" placeholder="Escriba el precio" />
    </div>

    <div class="mb-3">
        <label asp-for="Vigencia" class="form-label">Vigencia</label>
        <input type="text" class="form-control" asp-for="Vigencia" placeholder="Escriba la fecha de vigencia" />
    </div>

    <div class="mb-3">
        <label asp-for="Activo" class="form-label">Activo</label>
        <input type="text" class="form-control" asp-for="Activo" placeholder="Escriba si está activo" />
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-controller="Juguete" asp-action="JugueteList" class="btn btn-secondary mb-3">Regresar</a>
</form>